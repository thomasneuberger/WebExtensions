<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Nullable>enable</Nullable>
        <Title>Logging Extensions</Title>
        <Authors>Thomas Neuberger</Authors>
        <Description>Extensions to add middleware to support logging to the ASP.NET request pipeline</Description>
        <Copyright>Thomas Neuberger</Copyright>
        <PackageProjectUrl>https://github.com/thomasneuberger/WebExtensions</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/thomasneuberger/WebExtensions/blob/master/LICENSE.txt</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/thomasneuberger/WebExtensions</RepositoryUrl>
        <PackageId>thomasneuberger.LoggingExtensions</PackageId>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
      <PackageReference Include="Microsoft.AspNetCore.Http.Extensions" Version="2.2.0" />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.2" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
    </ItemGroup>

</Project>
